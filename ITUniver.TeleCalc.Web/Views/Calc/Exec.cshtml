@model ITUniver.TeleCalc.Web.Models.CalcModel
@using ITUniver.TeleCalc.ConCalc;

@{
    ViewBag.Title = "Exec";
        
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Вычислятор</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.OperName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.OperName, Model.OperationList, htmlAttributes: new { @class = "form-control", onChange = "setTimeout('calculate()', 500)" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InputData, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="overflow:hidden;">
                <div style="white-space:nowrap">
                    @Html.EditorFor(model => model.InputData,
                    "Collection",
                    new { htmlAttributes = new { @class = "form-control", oninput = "setTimeout('calculate()', 500)" } })
                    @Html.ValidationMessageFor(model => model.InputData, "", new { @class = "text-danger" })
                </div>                              
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Result, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="result">
                @Html.Partial("ExecResult")
            </div>
        </div>
    </div>
}

<script>
    function calculate() {
        var xElement = $("input[name=InputData]").last();
        if (xElement.val().endsWith(" ")) {
            var newInput = $("<div style=\"width: 90px; display:inline-block;\"><input class=\"form-control text-box single-line\" name = \"InputData\" float:left oninput=\"setTimeout('calculate()', 500)\" type=\"text\" value=\"\"></div>");
            newInput.insertAfter(xElement.parent());
            newInput.child().focus();
        }

        $.ajax({
            method: "POST",
            url: "/Calc/Exec",
            data: $('form').serializeArray()
        }).success(function (result) {
            $("#result").html(result) 
        })
    }
</script>

